echo -e "User ID     : ${uuid}"
echo -e "Xray Dns.   : ${NS}"
echo -e "Pubkey.     : ${PUB}"
echo -e "Encryption  : none"
echo -e "Path TLS    : /vless "
echo -e "ServiceName : vless-grpc"
echo -e "\033[1;93mâ—‡â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â—‡\033[0m"
echo -e "Link TLS    : ${vlesslink1}"
echo -e "\033[1;93mâ—‡â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â—‡\033[0m"
