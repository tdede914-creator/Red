function fun_bar() {
    CMD[0]="$1"
    CMD[1]="$2"
    (
        [[ -e $HOME/fim ]] && rm $HOME/fim
        ${CMD[0]} -y >/dev/null 2>&1
        ${CMD[1]} -y >/dev/null 2>&1
        touch $HOME/fim
    ) >/dev/null 2>&1 &
    tput civis
    # Node.js-style spinning dot animation array
    spinner=("â ‹" "â ™" "â ¹" "â ¸" "â ¼" "â ´" "â ¦" "â §" "â ‡" "â ")
    while true; do
        for symbol in "${spinner[@]}"; do
            printf "\r\033[0;36m%s Processing\033[0m" "$symbol"
            sleep 0.1
        done
        [[ -e $HOME/fim ]] && rm $HOME/fim && break
    done
    printf "\r\033[1;32m[âœ“] Completed!\033[0m\n"
    tput cnorm
}

function upp(){
    clear
    cd /usr/local/
    rm -rf sbin
    rm -rf /usr/bin/enc
    mkdir /usr/local/sbin
    dateFromServer=$(curl -v --insecure --silent https://google.com/ 2>&1 | grep Date | sed -e 's/< Date: //')
    biji=`date +"%Y-%m-%d" -d "$dateFromServer"`
    red() { echo -e "\\033[32;1m${*}\\033[0m"; }
    clear
    res1() {
        wget ${Repo}Features/menu.zip
        wget -q -O /usr/bin/enc "${Repo}enc/encrypt" ; chmod +x /usr/bin/enc
        7z e -paskykenza123 menu.zip
        unzip menu.zip
        chmod +x menu/*
        enc menu/*
        mv menu/* /usr/local/sbin
        #rm -rf menu
        rm -rf menu.zip
        rm -rf update.sh
    }
    netfilter-persistent
    clear
    echo -e "\033[1;36mâ”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”\033[0m"
