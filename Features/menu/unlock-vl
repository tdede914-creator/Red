#!/bin/bash
dateFromServer=$(curl -v --insecure --silent https://google.com/ 2>&1 | grep Date | sed -e 's/< Date: //')
biji=`date +"%Y-%m-%d" -d "$dateFromServer"`
RED='\033[0;31m'
NC='\033[0m'
GREEN='\033[0;32m'
ORANGE='\033[0;33m'
BLUE='\033[0;34m'
PURPLE='\033[0;35m'
CYAN='\033[0;36m'
LIGHT='\033[0;37m'
red='\e[1;31m'
green='\e[0;32m'
NC='\e[0m'
green() { echo -e "\\033[32;1m${*}\\033[0m"; }
red() { echo -e "\\033[31;1m${*}\\033[0m"; }
clear

yellow="\033[0;33m"
ungu="\033[0;35m"
Red="\033[91;1m"
Cyan="\033[96;1m"
Xark="\033[0m"
BlueCyan="\033[5;36m"
WhiteBe="\033[5;37m"
GreenBe="\033[5;32m"
YellowBe="\033[5;33m"
BlueBe="\033[5;34m"
nama=$(cat /etc/xray/username)

# . Liner 
function send_log(){
CHATID=$(grep -E "^#bot# " "/etc/bot/.bot.db" | cut -d ' ' -f 3)
KEY=$(grep -E "^#bot# " "/etc/bot/.bot.db" | cut -d ' ' -f 2)
TIME="10"
URL="https://api.telegram.org/bot$KEY/sendMessage"
TEXT="
<code>────────────────────</code>
<b>⚠️ NOTIFICATIONS UNLOCK XRAY ⚠️</b>
<code>────────────────────</code>
Username  : <code>$user</code>
Expaired  : ${exp}
Status    : UNLOCKED
<code>────────────────────</code>
"
curl -s --max-time $TIME -d "chat_id=$CHATID&disable_web_page_preview=1&text=$TEXT&parse_mode=html" $URL >/dev/null
}

function cek_lock() {
cekcek=$(cat /etc/xray/.lock.db)
if [[ $cekcek == "" ]]; then
cat >/etc/xray/.lock.db <<EOF
#vmess
#vless
#trojan
#ss
EOF
else
echo -ne
fi
}
cek_lock
function baris_panjang() {
  echo -e "${BlueCyan} ——————————————————————————————————— ${Xark} "
}

function Newbie_Banner() {
clear
baris_panjang
echo -e "${ungu}           $nama      ${Xark} "
baris_panjang
}

function Sc_Credit(){
sleep 1
baris_panjang
echo -e "${ungu}  Terimakasih Telah Menggunakan ${Xark}"
echo -e "${ungu}          Script Credit ${Xark}"
echo -e "${ungu}          $nama ${Xark}"
baris_panjang
echo ""
echo -e "{GREEN} Wait 3 Second For Back To Menu ${Xark}"
sleep 3
m-xray
}

duration=3
frames=("██10%" "█████35%" "█████████65%" "█████████████80%" "█████████████████████90%" "█████████████████████████100%")
num_frames=${#frames[@]}
num_iterations=$((duration))

Loading_Animasi() {
    for ((i = 0; i < num_iterations; i++)); do
        clear
        index=$((i % num_frames))
        color_code=$((31 + i % 7))
echo ""
echo ""
echo ""
echo -e "\e[1;${color_code}m ${frames[$index]}\e[0m"
sleep 0.5
    done
}

function Loading_Succes() {
clear
echo -e  "\033[5;32mSucces\033[0m"
sleep 1
clear
}

function Daftar_Account() {
grep -E "^#& " "/etc/xray/.lock.db" | cut -d ' ' -f 2-3 | column -t | sort | uniq
}

NUMBER_OF_CLIENTS=$(grep -c -E "^#& " "/etc/xray/.lock.db")
if [[ ${NUMBER_OF_CLIENTS} == '0' ]]; then
    baris_panjang
    Newbie_Banner
    baris_panjang
    echo ""
    echo -e "${Red} No Locked Accounts Found! ${Xark} "
    echo ""
    baris_panjang
    Sc_Credit
    exit 0
fi

clear
baris_panjang
echo -e "${ungu}           ACCOUNT VLESS LOCKED      ${Xark}"
baris_panjang
echo -e "${WhiteBe}  User       Expired  ${Xark}  " 
baris_panjang
Daftar_Account
echo ""
baris_panjang
echo ""
echo ""
read -rp " Input Username    : " user

# Check if account exists in lock database
if ! grep -q "^#& $user " "/etc/xray/.lock.db"; then
    clear
    baris_panjang
    Newbie_Banner
    baris_panjang
    echo ""
    echo -e "${Red} Account $user Not Found in Locked Database! ${Xark} "
    echo ""
    baris_panjang
    Sc_Credit
    exit 0
fi

# Check if account is already unlocked in config
if grep -q "^#& $user " "/etc/xray/config.json"; then
    clear
    baris_panjang
    Newbie_Banner
    baris_panjang
    echo ""
    echo -e "${Red} Account $user is Already Unlocked! ${Xark} "
    echo ""
    baris_panjang
    Sc_Credit
    exit 0
fi

Loading_Animasi
Loading_Succes
uuid=$(grep -E "^#&" "/etc/xray/.lock.db" | grep -wE "${user}" | cut -d " " -f 4)
exp=$(grep -E "^#&" "/etc/xray/.lock.db" | grep -wE "${user}" | cut -d " " -f 3)
Newbie_Banner
baris_panjang
echo -e "${GreenBe} Akun Tidak Terkunci ${Xark} "
echo ""
echo -e "${yellow} Client Name : $user ${Xark}"
echo -e "${yellow} Expired On  : $exp  ${Xark}"
echo -e "${yellow} Status      : Akun Tidak Terkunci ${Xark}"
echo ""
baris_panjang
sed -i "/^#& $user/,/^},{/d" /etc/xray/config.json
sed -i "/^#&& $user/,/^},{/d" /etc/xray/config.json
sed -i '/#vless$/a\#& '"$user $exp"'\
},{"id": "'""$uuid""'","email": "'""$user""'"' /etc/xray/config.json
sed -i '/#vlessgrpc$/a\#&& '"$user $exp"'\
},{"id": "'""$uuid""'","email": "'""$user""'"' /etc/xray/config.json
sed -=*i "/^#& $user $exp $uuid/d" /etc/xray/.lock.db
systemctl restart xray > /dev/null 2>&1
clear
Newbie_Banner
baris_panjang
echo -e "${GreenBe} Successfully ${Xark} "
echo ""
echo -e "${yellow} Client Name : $user ${Xark}"
echo -e "${yellow} Expired On  : $exp  ${Xark}"
echo -e "${yellow} Status  : Unlocked  ${Xark}"
echo ""
baris_panjang
send_log